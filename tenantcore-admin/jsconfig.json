{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "checkJs": false,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "jsx": "react",
        "baseUrl": ".",
        "paths": {
            "app/*": ["./src/app/*"],
            "media/*": ["./src/media/*"],
            "i18n/*": ["./src/i18n/*"],
            "@luciancaetano/*": ["./src/@luciancaetano/*"]
        }
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "./src/**/*"
    ]
}