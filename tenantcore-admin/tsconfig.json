{
  "compileOnSave": false,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "target": "es6",
    "module": "esnext",
    "jsx": "react",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "removeComments": true,
    "strictNullChecks": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "lib": [
      "es2015",
      "es2016",
      "dom",
      "esnext.asynciterable"
    ],
    "baseUrl": ".",
    "paths": {
      "@app/*": ["src/app/*"],
      "@types": ["src/app/types/index"],
      "@redux.types": ["src/app/types/redux/index"],
      "@redux.actions/*": ["src/app/actions/*"],
      "@redux.actiontypes": ["src/app/actions/index"],
      "@redux.reducers": ["src/app/reducers/index"],
      "@app.lib": ["src/app/lib/index"],
      "@app.config": ["src/app/app.config"],
      "@app.modules": ["src/app/app.modules"],
      "@app.routing": ["src/app/app.routing"],
      "@services.rest": ["src/app/services/rest/index"],
      "@socket": ["src/app/socket/index"],
      "@services.graphql": ["src/app/services/graphql/index"],
      "@components": ["src/app/components/index"],
      "@media/*": ["src/media/*"],
      "@styles/*": ["src/styles/*"]
    },
    "types": [
      "node"
    ]
  },
  "awesomeTypescriptLoaderOptions":{
    "useCache": true
  }
}