{
  "extends": ["tslint:recommended", "tslint-react", "tslint-config-prettier"],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts"
    ]
  },
  "rules": {
    "object-literal-sort-keys": false,
    "array-type": false,
    "object-literal-shorthand": false,
    "no-console": false,
    "jsx-no-lambda": false,
    "no-empty" : false
  }
}
